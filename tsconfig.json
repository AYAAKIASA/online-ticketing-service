{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // 추가: ES 모듈과 CommonJS 모듈 간 상호 운용성 향상
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@nestjs/*": ["node_modules/@nestjs/*"],
      "@/*": ["*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "resolveJsonModule": true // 추가: JSON 모듈을 import 할 수 있도록 설정
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
